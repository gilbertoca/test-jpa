<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="MyTest">
    <!-- Add all of your model classes here -->
    <class/>
    <class>mydomain.model.AtoLegal</class>
    <class>mydomain.model.Demissao</class>
    <class>mydomain.model.DenominacaoCargo</class>
    <class>mydomain.model.DenominacaoCargoDetalhe</class>
    <class>mydomain.model.Entidade</class>
    <class>mydomain.model.EstruturaOperacional</class>
    <class>mydomain.model.EtlServidorPublico</class>
    <class>mydomain.model.Exoneracao</class>
    <class>mydomain.model.Nomeacao</class>
    <class>mydomain.model.Redistribuicao</class>
    <class>mydomain.model.Vaga</class>
    <class>mydomain.model.VeiculoPublicacao</class>
    <class>mydomain.model.Person</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <!-- Update these datastore details if different -->
      <property name="javax.persistence.jdbc.url" value="jdbc:h2:file:data/sapeoDB;create=true;INIT=CREATE SCHEMA IF NOT EXISTS SAPEO;MODE=PostgreSQL;DB_CLOSE_DELAY=-1"/>
      <property name="javax.persistence.jdbc.driver" value="org.h2.Driver"/>
      <property name="javax.persistence.jdbc.user" value="sa"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
    </properties>
  </persistence-unit>
</persistence>
